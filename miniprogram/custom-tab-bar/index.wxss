.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: stretch;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 0.5px solid rgba(0, 0, 0, 0.1);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
}

.tab-text {
  font-size: 34rpx;
  font-weight: 500;
  line-height: 120rpx;
  height: 120rpx;
  text-align: center;
  width: 100%;
  transition: all 0.2s ease;
  letter-spacing: 0.5px;
}

/* 选中状态 */
.tab-text.selected {
  font-weight: 600;
}
