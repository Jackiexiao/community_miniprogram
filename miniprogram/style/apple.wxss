/* Apple Design System - Core Styles */

/* Typography */
.font-sf {
    font-family: -apple-system, "SF Pro Text", "SF Pro Icons", "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.text-headline {
    font-size: 34rpx;
    line-height: 1.3;
    font-weight: 600;
    letter-spacing: 0.004em;
}

.text-body {
    font-size: 28rpx;
    line-height: 1.5;
    letter-spacing: 0.004em;
}

.text-caption {
    font-size: 24rpx;
    line-height: 1.4;
    letter-spacing: 0.004em;
}

/* Colors */
page {
    --apple-gray-1: #f5f5f7;
    --apple-gray-2: #e5e5e7;
    --apple-gray-3: #d2d2d7;
    --apple-gray-4: #86868b;
    --apple-gray-5: #1d1d1f;
    --apple-blue: #0066cc;
    --apple-green: #34c759;
    --apple-red: #ff3b30;
}

/* Shadows and Effects */
.card-shadow {
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.depth-effect {
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.72);
}

/* Common Components */
.apple-card {
    background: #ffffff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin: 16rpx;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.apple-button {
    background: var(--apple-blue);
    color: #ffffff;
    border-radius: 8rpx;
    padding: 24rpx 32rpx;
    font-size: 28rpx;
    font-weight: 500;
    text-align: center;
    transition: all 0.2s ease;
}

.apple-button:active {
    opacity: 0.8;
}

.apple-button.secondary {
    background: var(--apple-gray-2);
    color: var(--apple-gray-5);
}

/* List Items */
.apple-list-item {
    padding: 32rpx 24rpx;
    background: #ffffff;
    border-bottom: 1rpx solid var(--apple-gray-2);
    display: flex;
    align-items: center;
}

.apple-list-item:last-child {
    border-bottom: none;
}

/* Form Elements */
.apple-input {
    background: var(--apple-gray-1);
    border-radius: 8rpx;
    padding: 24rpx;
    font-size: 28rpx;
    border: none;
}

.apple-input:focus {
    background: #ffffff;
    box-shadow: 0 0 0 2rpx var(--apple-blue);
}

/* Navigation */
.apple-nav {
    height: 88rpx;
    background: rgba(255, 255, 255, 0.72);
    backdrop-filter: blur(10px);
    border-bottom: 1rpx solid var(--apple-gray-2);
    display: flex;
    align-items: center;
    padding: 0 24rpx;
}

/* Status Elements */
.apple-tag {
    display: inline-block;
    padding: 8rpx 16rpx;
    border-radius: 32rpx;
    font-size: 24rpx;
    font-weight: 500;
}

.apple-tag.blue {
    background: rgba(0, 102, 204, 0.1);
    color: var(--apple-blue);
}

.apple-tag.green {
    background: rgba(52, 199, 89, 0.1);
    color: var(--apple-green);
}

.apple-tag.red {
    background: rgba(255, 59, 48, 0.1);
    color: var(--apple-red);
}

/* Animations */
.fade-in {
    animation: fadeIn 0.3s ease forwards;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10rpx);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Grid System */
.apple-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
    padding: 24rpx;
}

.apple-grid-item {
    background: #ffffff;
    border-radius: 16rpx;
    padding: 24rpx;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}
