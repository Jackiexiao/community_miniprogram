/* ==================
        初始化
 ==================== */
page {
	/* Apple System Colors */
	/* Label Colors */
	--label-primary: #000000;
	--label-secondary: #3C3C43;
	--label-tertiary: #3C3C434D;
	--label-quaternary: #3C3C432E;

	/* Fill Colors */
	--fill-primary: #787880;
	--fill-secondary: #78788019;
	--fill-tertiary: #7676801F;
	--fill-quaternary: #74748014;

	/* Background Colors */
	--bg-primary: #FFFFFF;
	--bg-secondary: #F2F2F7;
	--bg-tertiary: #FFFFFF;
	--bg-quaternary: #F2F2F7;

	/* Grouped Background Colors */
	--grouped-primary: #F2F2F7;
	--grouped-secondary: #FFFFFF;
	--grouped-tertiary: #F2F2F7;

	/* Separator Colors */
	--separator: #3C3C434A;
	--separator-opaque: #C6C6C8;

	/* System Colors */
	--system-blue: #007AFF;
	--system-green: #34C759;
	--system-indigo: #5856D6;
	--system-orange: #FF9500;
	--system-pink: #FF2D55;
	--system-purple: #AF52DE;
	--system-red: #FF3B30;
	--system-teal: #5AC8FA;
	--system-yellow: #FFCC00;
	--system-gray: #8E8E93;
	--system-gray2: #AEAEB2;
	--system-gray3: #C7C7CC;
	--system-gray4: #D1D1D6;
	--system-gray5: #E5E5EA;
	--system-gray6: #F2F2F7;

	/* 阴影 */
	--shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
	--shadow-md: 0 2px 4px 0 rgba(0, 0, 0, 0.05);
	--shadow-lg: 0 4px 6px -1px rgba(0, 0, 0, 0.05);

	background-color: var(--bg-secondary);
	font-size: 28rpx;
	color: var(--label-primary);
	font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue", sans-serif;

	/*苹果手机安全区域*/
	padding-bottom: constant(safe-area-inset-bottom);
	padding-bottom: env(safe-area-inset-bottom);
}

view,
scroll-view,
swiper,
button,
input,
textarea,
label,
navigator,
image {
	box-sizing: border-box;
} 

.hide {
	display: none !important;
}

.round {
	border-radius: 999rpx;
}

.radius {
	border-radius: 12rpx;
}

.radius-lg {
	border-radius: 24rpx;
}

.block {
	display: block;
} 

/* 多行文本 */
.text-content { 
	line-height: 1.6;
	table-layout: fixed; 
	word-break: break-all; 
	overflow: hidden;
}

/* 按钮基础样式 */
button {
	font-size: 32rpx;
	font-weight: 500;
	border-radius: 12rpx;
	padding: 20rpx 32rpx;
	transition: all 0.2s ease;
}

button:active {
	opacity: 0.8;
}

/* 输入框基础样式 */
input, textarea {
	background: var(--bg-secondary);
	border-radius: 12rpx;
	padding: 20rpx;
	font-size: 32rpx;
}
