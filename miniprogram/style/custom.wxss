/* 自定义底部 tabbar 样式 */
.tab-bar {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  height: 120rpx;
  background: #ffffff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 10rpx 0;
  position: relative;
}

.tab-bar-item view {
  font-size: 28rpx;
  line-height: 100rpx;
  height: 100%;
}

.tab-bar-item.active view {
  color: #007AFF;
  font-weight: 500;
}

/* 搜索框样式优化 */
.search-box {
  margin: 20rpx 30rpx;
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.search-input {
  height: 80rpx;
  padding: 0 80rpx;
  font-size: 28rpx;
  background: #fff;
}

.search-icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
  color: #666;
}

.search-placeholder {
  color: #999;
}
