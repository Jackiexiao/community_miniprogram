@import "/style/public/project.wxss";
@import "/projects/activityfee/style/skin.wxss";
@import "/style/apple.wxss";

page {
    background-color: var(--apple-gray-1) !important;
}

.main {
    padding: 24rpx;
}

.card-section {
    margin-bottom: 32rpx;
}

.card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24rpx;
}

.card-title {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--apple-gray-5);
}

.card-more {
    font-size: 24rpx;
    color: var(--apple-blue);
}

.card-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
}

.card-item {
    background: #ffffff;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
    transition: all 0.2s ease;
}

.card-item:active {
    transform: scale(0.98);
}

.card-item .image {
    width: 100%;
    height: 200rpx;
    position: relative;
}

.card-item .image image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.card-item .status {
    position: absolute;
    top: 16rpx;
    right: 16rpx;
    padding: 6rpx 12rpx;
    border-radius: 24rpx;
    font-size: 22rpx;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
}

.card-item .content {
    padding: 16rpx;
}

.card-item .name {
    font-size: 28rpx;
    font-weight: 500;
    color: var(--apple-gray-5);
    margin-bottom: 8rpx;
    line-height: 1.4;
}

.card-item .info {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.card-item .price {
    font-size: 24rpx;
    color: var(--apple-blue);
    font-weight: 500;
}

.card-item .time {
    font-size: 22rpx;
    color: var(--apple-gray-4);
}

.empty-view {
    width: 100%;
    padding: 64rpx 24rpx;
    text-align: center;
}

.empty-view image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 24rpx;
}

.empty-view .text {
    font-size: 28rpx;
    color: var(--apple-gray-4);
    margin-bottom: 32rpx;
}

.empty-view .btn {
    display: inline-block;
    padding: 16rpx 48rpx;
    background: var(--apple-blue);
    color: #ffffff;
    font-size: 28rpx;
    font-weight: 500;
    border-radius: 32rpx;
    transition: all 0.2s ease;
}

.empty-view .btn:active {
    opacity: 0.8;
}

.load-more {
    width: 100%;
    padding: 24rpx;
    text-align: center;
    font-size: 24rpx;
    color: var(--apple-gray-4);
}
