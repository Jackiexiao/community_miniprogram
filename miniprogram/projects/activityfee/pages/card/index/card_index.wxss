@import "/style/public/project.wxss";
@import "/projects/activityfee/style/skin.wxss";
@import "/style/apple.wxss";

page {
    background-color: #F7F7F7;
}


/* 视图切换按钮样式 */
.view-switch {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    padding: 20rpx 30rpx;
    background-color: #fff;
    margin: 20rpx 24rpx 0;
    border-radius: 12rpx;
}

.view-switch .icon-list,
.view-switch .icon-apps {
    font-size: 36rpx;
    color: #333;
    margin-right: 12rpx;
}

.view-switch .switch-text {
    font-size: 28rpx;
    color: #666;
}

/* 卡片列表容器 */
.card-list {
    width: 100%;
    box-sizing: border-box;
}

/* Grid View Styles */
.grid-view {
    padding: 24rpx;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
}

.grid-view .card-item {
    background-color: #FFFFFF;
    border-radius: 24rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
    transition: all 0.2s ease-in-out;
}

.grid-view .card-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    margin: 24rpx auto 16rpx;
}

.grid-view .card-content {
    padding: 0 24rpx 24rpx;
    text-align: center;
}

/* List View Styles */
.list-view {
    padding: 24rpx;
}

.list-view .card-item {
    background-color: #FFFFFF;
    border-radius: 24rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 24rpx;
    margin-bottom: 24rpx;
    transition: all 0.2s ease-in-out;
}

.list-view .card-image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
    margin-right: 24rpx;
    flex-shrink: 0;
}

.list-view .card-content {
    flex: 1;
    text-align: left;
    min-width: 0;
}

/* Common Styles */
.card-item:active {
    transform: scale(0.98);
    opacity: 0.8;
}

.card-name {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 8rpx;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.card-desc {
    font-size: 24rpx;
    color: #666;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.load-more {
    width: 100%;
    padding: 24rpx;
    text-align: center;
    font-size: 24rpx;
    color: var(--apple-gray-4);
}

.empty-view {
    width: 100%;
    padding: 64rpx 24rpx;
    text-align: center;
}

.empty-view image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 24rpx;
}

.empty-view .text {
    font-size: 28rpx;
    color: var(--apple-gray-4);
    margin-bottom: 32rpx;
}

.empty-view .btn {
    display: inline-block;
    padding: 16rpx 48rpx;
    background: var(--apple-blue);
    color: #ffffff;
    font-size: 28rpx;
    font-weight: 500;
    border-radius: 32rpx;
    transition: all 0.2s ease;
}

.empty-view .btn:active {
    opacity: 0.8;
}
