@import "/style/public/project.wxss";
@import "/projects/activityfee/style/skin.wxss";
@import "/style/apple.wxss";

page {
    background-color: #F7F7F7;
}

.container {
    min-height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
}

.flex-col {
    display: flex;
    flex-direction: column;
    flex: 1;
    margin-top: 100rpx;
}

.fixed {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 999;
}

.main {
    flex: 1;
    padding: 0;
    background-color: #F7F7F7;
}

.card-section {
    padding: var(--spacingMedium);
}

.card-list {
    padding: 24rpx;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
    width: 100%;
    box-sizing: border-box;
}

.card-item {
    background-color: #FFFFFF;
    border-radius: 24rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
    transition: all 0.2s ease-in-out;
}

.card-item:active {
    transform: scale(0.98);
    opacity: 0.8;
}

.card-image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    margin: 24rpx auto 16rpx;
}

.card-content {
    padding: 0 24rpx 24rpx;
    text-align: center;
}

.card-name {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 8rpx;
    line-height: 1.4;
}

.card-desc {
    font-size: 24rpx;
    color: #666;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.empty-view {
    width: 100%;
    padding: 64rpx 24rpx;
    text-align: center;
}

.empty-view image {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 24rpx;
}

.empty-view .text {
    font-size: 28rpx;
    color: var(--apple-gray-4);
    margin-bottom: 32rpx;
}

.empty-view .btn {
    display: inline-block;
    padding: 16rpx 48rpx;
    background: var(--apple-blue);
    color: #ffffff;
    font-size: 28rpx;
    font-weight: 500;
    border-radius: 32rpx;
    transition: all 0.2s ease;
}

.empty-view .btn:active {
    opacity: 0.8;
}

.load-more {
    width: 100%;
    padding: 24rpx;
    text-align: center;
    font-size: 24rpx;
    color: var(--apple-gray-4);
}
