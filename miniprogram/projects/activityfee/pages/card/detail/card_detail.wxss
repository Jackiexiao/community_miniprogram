@import "/style/public/project.wxss";
@import "/projects/activityfee/style/skin.wxss";
@import "/style/apple.wxss";

page {
    background-color: var(--apple-gray-1) !important;
}

.main {
    min-height: 100vh;
    padding: 30rpx;
}

.card-detail {
    padding: 30rpx;
}

.card-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    background-color: #f5f5f5;
}

.info {
    flex: 1;
}

.name {
    font-size: 32rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 8rpx;
}

.time {
    font-size: 24rpx;
    color: #999;
}

.card-body {
    margin-top: 20rpx;
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section {
    margin-bottom: 30rpx;
}

.section:last-child {
    margin-bottom: 0;
}

.desc {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
    margin-bottom: 16rpx;
}

.city {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    color: #999;
}

.icon-location {
    margin-right: 8rpx;
}

.title {
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
    margin-bottom: 16rpx;
}

.content {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
}

.item {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
}

.label {
    font-size: 28rpx;
    color: #999;
    margin-right: 20rpx;
    min-width: 140rpx;
}

.value {
    font-size: 28rpx;
    color: #333;
    flex: 1;
}

.card-footer {
    padding: 30rpx;
    border-top: 2rpx solid #f5f5f5;
}

.btn-edit {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: #0066ff;
    color: #fff;
    border-radius: 44rpx;
    font-size: 32rpx;
    font-weight: 500;
    border: none;
}

.btn-fav {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    background: rgba(0, 102, 255, 0.1);
    color: #0066ff;
    border-radius: 44rpx;
    font-size: 32rpx;
    font-weight: 500;
    border: none;
}

.btn-fav.active {
    background: #0066ff;
    color: #fff;
}
