<view class="main">
    <view class="card-detail" wx:if="{{isLoad}}">
        <!-- 头部个人信息 -->
        <view class="header">
            <image class="avatar" src="{{card.USER_PIC}}" mode="aspectFill"></image>
            <view class="name-section">
                <text class="nickname">{{card.USER_NICK_NAME}}</text>
                <view class="tags">
                    <text class="tag profession">{{professionMap[card.USER_PROFESSION]}}</text>
                    <text class="tag status">{{employmentStatusMap[card.USER_EMPLOYMENT_STATUS]}}</text>
                    <text class="tag location" wx:if="{{card.USER_CITY}}">{{card.USER_CITY}}</text>
                    <text class="tag gender">{{card.USER_GENDER === 'male' ? '男' : '女'}}</text>
                </view>
            </view>
        </view>

        <!-- 个人描述 -->
        <view class="section" wx:if="{{card.USER_DESC}}">
            <view class="section-title">个人简介</view>
            <view class="section-content">{{card.USER_DESC}}</view>
        </view>

        <!-- 联系方式 -->
        <view class="section">
            <view class="section-title">联系方式</view>
            <view class="contact-item">
                <text class="label">手机号码</text>
                <text class="value">{{card.USER_MOBILE}}</text>
            </view>
        </view>

        <!-- 加入时间 -->
        <view class="section">
            <view class="section-title">其他信息</view>
            <view class="info-item">
                <text class="label">加入时间</text>
                <text class="value">{{card.USER_ADD_TIME}}</text>
            </view>
        </view>

        <!-- 收藏按钮 -->
        <view class="footer">
            <button class="fav-btn {{isFav?'active':''}}" bindtap="bindFavTap">
                <text class="icon">❤</text>
                <text>{{isFav?'已收藏':'收藏'}}</text>
            </button>
        </view>
    </view>

    <view wx:if="{{!isLoad}}" class="loading">加载中...</view>
</view>
