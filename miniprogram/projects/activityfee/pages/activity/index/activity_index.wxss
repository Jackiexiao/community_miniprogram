@import "/style/public/project.wxss";
@import "/projects/activityfee/style/skin.wxss";
@import "/style/apple.wxss";

page {
    background-color: var(--apple-gray-1) !important;
}

.main {
	padding: 0;
	background-color: var(--apple-gray-1) !important;
}

.list {
	width: 100%;
	padding: 20rpx 24rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 24rpx;
	overflow: hidden;
	position: relative;
	border-radius: 16rpx;
	margin-bottom: 24rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
	transition: all 0.2s ease-in-out;
}

.list .item:active {
	transform: scale(0.98);
	transition: all 0.2s ease-in-out;
}

.list .item .left {
	width: 240rpx;
	height: 180rpx;
	border-radius: 12rpx;
	margin-right: 20rpx;
}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.list .item .right .top {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.list .item .right .top .title {
	width: 100%;
	font-size: 32rpx;
	font-weight: 500;
	color: var(--apple-gray-5);
	margin-bottom: 16rpx;
	margin-top: 8rpx;
	line-height: 1.4;
}

.list .item .right .top .desc {
	width: 100%;
	font-size: 26rpx;
	color: var(--apple-gray-4);
	margin-bottom: 16rpx;
}

.list .item .right .line {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 26rpx;
	margin-top: 8rpx;
}

.list .item .right .line .join {
	color: var(--apple-gray-4);
	font-size: 26rpx;
	padding: 8rpx 16rpx;
	background-color: var(--apple-gray-1);
	border-radius: 24rpx;
}

.list .item .right .line .join.comm {
	color: #fff;
	background-color: #0066CC;
}

.list .item .right .line .users {
	flex: 1;
	display: flex;
	align-items: center;
}

.list .item .right .line .users .pic-group {
	display: flex;
	padding: 0 12rpx 0 0;
	align-items: center;
}

.list .item .right .line .users .pic-group .pic {
	width: 44rpx !important;
	height: 44rpx !important;
	border: 2rpx solid #fff;
	margin-right: -12rpx;
}

.list .item .right .line .users .num {
	font-size: 26rpx;
	color: var(--apple-gray-4);
	margin-left: 8rpx;
}

.tabs .tab-menu.cur {
	color: #000 !important;
	font-size: 30rpx !important;
}

.tabs .tab-menu.cur:after {
	content: " ";
	position: absolute;
	left: 50%;
	bottom: 0rpx;
	width: 50%;
	height: 8rpx !important;
	background-color: var(--projectColor) !important;
	transform: translateX(-50%);
	border-radius: 20rpx !important;
}

.top-bar {
    width: 100%;
    background: rgba(255, 255, 255, 0.72);
    backdrop-filter: blur(10px);
    padding: 24rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid var(--apple-gray-2);
}

.search-bar {
    flex: 1;
    height: 72rpx;
    background: var(--apple-gray-1);
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    padding: 0 24rpx;
    margin-right: 24rpx;
}

.search-bar input {
    flex: 1;
    height: 100%;
    font-size: 28rpx;
    color: var(--apple-gray-5);
}

.search-bar .icon-search {
    font-size: 32rpx;
    color: var(--apple-gray-4);
    margin-right: 12rpx;
}

.filter-btn {
    width: 72rpx;
    height: 72rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--apple-gray-1);
    border-radius: 36rpx;
}

.filter-btn .icon {
    font-size: 36rpx;
    color: var(--apple-gray-5);
}

.swiper-box {
    width: 100%;
    height: 400rpx;
    margin-top: 120rpx;
    padding: 24rpx;
}

.swiper-box swiper {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.swiper-box image {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}

.category-list {
    width: 100%;
    padding: 24rpx;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24rpx;
}

.category-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 24rpx;
    background: #ffffff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
    transition: all 0.2s ease;
}

.category-item:active {
    transform: scale(0.96);
}

.category-item .icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 12rpx;
}

.category-item .text {
    font-size: 24rpx;
    color: var(--apple-gray-5);
    font-weight: 500;
}

.section-title {
    padding: 32rpx 24rpx 16rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: var(--apple-gray-5);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.section-title .more {
    font-size: 24rpx;
    color: var(--apple-blue);
    font-weight: 400;
}

.activity-list {
    padding: 0 24rpx;
}

.activity-card {
    background: #ffffff;
    border-radius: 16rpx;
    margin-bottom: 24rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
    transition: all 0.2s ease;
}

.activity-card:active {
    transform: scale(0.98);
}

.activity-card .image {
    width: 100%;
    height: 320rpx;
    position: relative;
}

.activity-card .image image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.activity-card .status {
    position: absolute;
    top: 24rpx;
    right: 24rpx;
    padding: 8rpx 16rpx;
    border-radius: 32rpx;
    font-size: 24rpx;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
}

.activity-card .content {
    padding: 24rpx;
}

.activity-card .title {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--apple-gray-5);
    margin-bottom: 12rpx;
    line-height: 1.4;
}

.activity-card .info {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
}

.activity-card .tag {
    font-size: 24rpx;
    color: var(--apple-gray-4);
    background: var(--apple-gray-1);
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    margin-right: 16rpx;
}

.activity-card .desc {
    font-size: 28rpx;
    color: var(--apple-gray-4);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.load-more {
    width: 100%;
    padding: 24rpx;
    text-align: center;
    font-size: 24rpx;
    color: var(--apple-gray-4);
}