@import "../../../style/skin.wxss";

.main {
	padding: 0rpx !important;
	background-color: #F5F5F7;
}

.list {
	width: 100%;
	padding: 20rpx 24rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 24rpx;
	overflow: hidden;
	position: relative;
	border-radius: 16rpx;
	margin-bottom: 24rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
	transition: all 0.2s ease-in-out;
}

.list .item:active {
	transform: scale(0.98);
	transition: all 0.2s ease-in-out;
}

.list .item .left {
	width: 240rpx;
	height: 180rpx;
	border-radius: 12rpx;
	margin-right: 20rpx;
}

.list .item .right {
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.list .item .right .top {
	width: 100%;
	display: flex;
	flex-direction: column;
}

.list .item .right .top .title {
	width: 100%;
	font-size: 32rpx;
	font-weight: 500;
	color: #1D1D1F;
	margin-bottom: 16rpx;
	margin-top: 8rpx;
	line-height: 1.4;
}

.list .item .right .top .desc {
	width: 100%;
	font-size: 26rpx;
	color: #86868B;
	margin-bottom: 16rpx;
}

.list .item .right .line {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 26rpx;
	margin-top: 8rpx;
}

.list .item .right .line .join {
	color: #86868B;
	font-size: 26rpx;
	padding: 8rpx 16rpx;
	background-color: #F5F5F7;
	border-radius: 24rpx;
}

.list .item .right .line .join.comm {
	color: #fff;
	background-color: #0066CC;
}

.list .item .right .line .users {
	flex: 1;
	display: flex;
	align-items: center;
}

.list .item .right .line .users .pic-group {
	display: flex;
	padding: 0 12rpx 0 0;
	align-items: center;
}

.list .item .right .line .users .pic-group .pic {
	width: 44rpx !important;
	height: 44rpx !important;
	border: 2rpx solid #fff;
	margin-right: -12rpx;
}

.list .item .right .line .users .num {
	font-size: 26rpx;
	color: #86868B;
	margin-left: 8rpx;
}

.tabs .tab-menu.cur {
	color: #000 !important;
	font-size: 30rpx !important;
}

.tabs .tab-menu.cur:after {
	content: " ";
	position: absolute;
	left: 50%;
	bottom: 0rpx;
	width: 50%;
	height: 8rpx !important;
	background-color: var(--projectColor) !important;
	transform: translateX(-50%);
	border-radius: 20rpx !important;
}