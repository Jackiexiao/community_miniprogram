@import "/style/public/project.wxss";
@import "/projects/activityfee/style/skin.wxss";
@import "/style/apple.wxss";

page {
	background-color: var(--bgSecondary);
}

.main {
	padding: 0;
	background-color: var(--bgSecondary);
}

.list {
	width: 100%;
	padding: var(--spacingMedium);
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	background-color: var(--bgPrimary);
	border-radius: var(--radiusMedium);
	margin-bottom: var(--spacingMedium);
	overflow: hidden;
	box-shadow: var(--shadowSmall);
	transition: all 0.2s ease-in-out;
}

.list .item:active {
	transform: scale(0.98);
	opacity: 0.9;
}

.image-wrapper {
	width: 100%;
	height: 360rpx;
	position: relative;
	background-color: var(--bgSecondary);
}

.activity-image {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

.placeholder-image {
	width: 100%;
	height: 100%;
	position: relative;
	overflow: hidden;
	background: linear-gradient(135deg, var(--iosBlue), var(--iosTeal));
}

.placeholder-content {
	position: relative;
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: var(--spacingLarge);
	z-index: 2;
}

.placeholder-icon {
	width: 96rpx;
	height: 96rpx;
	border-radius: 48rpx;
	background-color: rgba(255, 255, 255, 0.2);
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: var(--spacingMedium);
	backdrop-filter: blur(10px);
}

.placeholder-icon .icon-calendar {
	font-size: 48rpx;
	color: #FFFFFF;
}

.placeholder-info {
	text-align: center;
}

.placeholder-title {
	display: block;
	font-size: 32rpx;
	color: #FFFFFF;
	font-weight: 600;
	margin-bottom: var(--spacingXSmall);
	text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.placeholder-desc {
	display: block;
	font-size: 26rpx;
	color: rgba(255, 255, 255, 0.9);
}

.placeholder-pattern {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: 1;
	opacity: 0.1;
	pointer-events: none;
}

.pattern-circle {
	position: absolute;
	width: 400rpx;
	height: 400rpx;
	border-radius: 200rpx;
	border: 4rpx solid #FFFFFF;
	top: -100rpx;
	right: -100rpx;
}

.pattern-line {
	position: absolute;
	width: 200rpx;
	height: 4rpx;
	background: #FFFFFF;
	bottom: 100rpx;
	left: 50rpx;
	transform: rotate(-45deg);
}

.content {
	padding: var(--spacingMedium);
}

.title-row {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: var(--spacingSmall);
}

.title {
	flex: 1;
	font-size: 32rpx;
	font-weight: 600;
	color: var(--textPrimary);
	line-height: 1.4;
}

.status-tag {
	padding: 8rpx 16rpx;
	border-radius: var(--radiusCircular);
	font-size: 24rpx;
	background-color: var(--bgSecondary);
	color: var(--textSecondary);
	margin-left: var(--spacingSmall);
}

.status-tag.active {
	background-color: var(--iosGreen);
	color: #FFFFFF;
}

.time-row {
	display: flex;
	align-items: center;
	margin-bottom: var(--spacingMedium);
}

.icon-time {
	font-size: 28rpx;
	color: var(--textSecondary);
	margin-right: var(--spacingXSmall);
}

.time {
	font-size: 26rpx;
	color: var(--textSecondary);
}

.footer {
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-top: 2rpx solid var(--separatorColor);
	padding-top: var(--spacingMedium);
}

.users {
	display: flex;
	align-items: center;
}

.avatar-group {
	display: flex;
	margin-right: var(--spacingSmall);
}

.avatar {
	width: 48rpx;
	height: 48rpx;
	border-radius: 24rpx;
	border: 4rpx solid #FFFFFF;
	margin-left: -16rpx;
}

.avatar:first-child {
	margin-left: 0;
}

.join-count {
	font-size: 26rpx;
	color: var(--textSecondary);
}

.tabs .tab-menu.cur {
	color: #000 !important;
	font-size: 30rpx !important;
}

.tabs .tab-menu.cur:after {
	content: " ";
	position: absolute;
	left: 50%;
	bottom: 0rpx;
	width: 50%;
	height: 8rpx !important;
	background-color: var(--projectColor) !important;
	transform: translateX(-50%);
	border-radius: 20rpx !important;
}

.top-bar {
    width: 100%;
    background: rgba(255, 255, 255, 0.72);
    backdrop-filter: blur(10px);
    padding: 24rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid var(--apple-gray-2);
}

.search-bar {
    flex: 1;
    height: 72rpx;
    background: var(--apple-gray-1);
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    padding: 0 24rpx;
    margin-right: 24rpx;
}

.search-bar input {
    flex: 1;
    height: 100%;
    font-size: 28rpx;
    color: var(--apple-gray-5);
}

.search-bar .icon-search {
    font-size: 32rpx;
    color: var(--apple-gray-4);
    margin-right: 12rpx;
}

.filter-btn {
    width: 72rpx;
    height: 72rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--apple-gray-1);
    border-radius: 36rpx;
}

.filter-btn .icon {
    font-size: 36rpx;
    color: var(--apple-gray-5);
}

.swiper-box {
    width: 100%;
    height: 400rpx;
    margin-top: 120rpx;
    padding: 24rpx;
}

.swiper-box swiper {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.swiper-box image {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}

.category-list {
    width: 100%;
    padding: 24rpx;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24rpx;
}

.category-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 24rpx;
    background: #ffffff;
    border-radius: 16rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
    transition: all 0.2s ease;
}

.category-item:active {
    transform: scale(0.96);
}

.category-item .icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 12rpx;
}

.category-item .text {
    font-size: 24rpx;
    color: var(--apple-gray-5);
    font-weight: 500;
}

.section-title {
    padding: 32rpx 24rpx 16rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: var(--apple-gray-5);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.section-title .more {
    font-size: 24rpx;
    color: var(--apple-blue);
    font-weight: 400;
}

.activity-list {
    padding: 0 24rpx;
}

.activity-card {
    background: #ffffff;
    border-radius: 16rpx;
    margin-bottom: 24rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
    transition: all 0.2s ease;
}

.activity-card:active {
    transform: scale(0.98);
}

.activity-card .image {
    width: 100%;
    height: 320rpx;
    position: relative;
}

.activity-card .image image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.activity-card .status {
    position: absolute;
    top: 24rpx;
    right: 24rpx;
    padding: 8rpx 16rpx;
    border-radius: 32rpx;
    font-size: 24rpx;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
}

.activity-card .content {
    padding: 24rpx;
}

.activity-card .title {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--apple-gray-5);
    margin-bottom: 12rpx;
    line-height: 1.4;
}

.activity-card .info {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
}

.activity-card .tag {
    font-size: 24rpx;
    color: var(--apple-gray-4);
    background: var(--apple-gray-1);
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    margin-right: 16rpx;
}

.activity-card .desc {
    font-size: 28rpx;
    color: var(--apple-gray-4);
    line-height: 1.6;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.load-more {
    width: 100%;
    padding: 24rpx;
    text-align: center;
    font-size: 24rpx;
    color: var(--apple-gray-4);
}