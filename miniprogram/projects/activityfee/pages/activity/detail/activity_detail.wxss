@import "/style/public/detail.wxss";
@import "/projects/activityfee/style/skin.wxss";
@import "/style/apple.wxss";

page {
    background-color: var(--apple-gray-1) !important;
}

.main {
    position: relative;
    width: 100%;
    margin-top: -100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    background-color: #fff;
    min-height: 500rpx;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    padding: 30rpx 40rpx;
}

.cover {
    width: 100%;
    border-radius: 16rpx;
    overflow: hidden;
}

.author {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 24rpx 0;
}

.author .left {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin-right: 24rpx;
}

.author .right {
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
}

.author .right .line1 {
    font-size: 24rpx;
    padding: 4rpx 0;
    color: var(--apple-gray-4);
}

.title {
    width: 100%;
    font-size: 40rpx;
    font-weight: 600;
    padding: 24rpx 0;
    margin-top: 16rpx;
    text-align: left;
    color: var(--apple-gray-5);
    letter-spacing: -0.003em;
}

.user-pic {
    width: 100%;
    display: flex;
    padding: 36rpx 30rpx;
    background-color: var(--apple-gray-1);
    border-radius: 16rpx;
    display: flex;
    flex-direction: column;
    margin-top: 30rpx;
}

.user-pic .line1 {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    padding: 16rpx 0 36rpx;
    border-bottom: 1rpx solid var(--apple-gray-2);
}

.user-pic .line1 image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    margin: 0 16rpx;
}

.user-pic .line2 {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-top: 24rpx;
    color: var(--apple-blue);
    font-size: 28rpx;
    font-weight: 500;
}

.detail-title {
    width: 100%;
    font-size: 32rpx;
    font-weight: 600;
    padding: 32rpx 0rpx 16rpx;
    color: var(--apple-gray-5);
}

.detail {
    width: 100%;
    background-color: #fff;
    padding: 0rpx 0rpx;
    overflow: hidden;
    transform: translateY(0);
    display: flex;
    flex-direction: column;
}

.detail .list1 {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
    padding: 24rpx 0;
}

.detail .list1 .item {
    background: var(--apple-gray-1);
    border-radius: 16rpx;
    padding: 24rpx;
    display: flex;
    align-items: center;
}

.detail .list1 .item .left {
    color: var(--apple-blue);
    font-size: 48rpx;
    margin-right: 16rpx;
}

.detail .list1 .item .right {
    display: flex;
    flex-direction: column;
}

.detail .list1 .item .right .txt1 {
    font-size: 28rpx;
    color: var(--apple-gray-5);
    font-weight: 500;
    margin-bottom: 4rpx;
}

.detail .list1 .item .right .txt2 {
    font-size: 24rpx;
    color: var(--apple-gray-4);
}

.detail .desc {
    font-size: 28rpx;
    color: var(--apple-gray-5);
    line-height: 1.6;
    padding: 24rpx;
    background: var(--apple-gray-1);
    border-radius: 16rpx;
    margin: 16rpx 0;
}

.detail .rule {
    font-size: 24rpx;
    color: var(--apple-gray-4);
    padding: 16rpx 24rpx;
    background: var(--apple-gray-1);
    border-radius: 16rpx;
    margin: 8rpx 0;
}

.map {
    font-size: 28rpx;
    color: var(--apple-gray-5);
    line-height: 1.6;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx;
    background: var(--apple-gray-1);
    border-radius: 16rpx;
    margin: 16rpx 0;
}

.btn-bottom {
    width: 100%;
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 24rpx;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    display: flex;
    justify-content: space-between;
    z-index: 999;
}

.btn-bottom .btn {
    flex: 1;
    margin: 0 12rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    border-radius: 44rpx;
    font-size: 32rpx;
    font-weight: 500;
    transition: all 0.2s ease;
}

.btn-bottom .btn.bg-blue {
    background: var(--apple-blue);
    color: #fff;
}

.btn-bottom .btn.bg-grey {
    background: var(--apple-gray-2);
    color: var(--apple-gray-5);
}