@import "/style/public/project.wxss";
@import "/projects/activityfee/style/skin.wxss";
@import "/style/apple.wxss";

page {
    background-color: var(--apple-gray-1) !important;
}

.main {
    padding: 0 24rpx;
}

.list {
    width: 100%;
    display: flex;
    flex-direction: column;
    padding: 24rpx 0;
}

.list .item {
    width: 100%;
    display: flex;
    flex-direction: column;
    background: #ffffff;
    border-radius: 16rpx;
    margin-bottom: 24rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
    transition: all 0.2s ease;
}

.list .item:active {
    transform: scale(0.98);
}

.list .item .cover {
    width: 100%;
    height: 320rpx;
    border-radius: 16rpx 16rpx 0 0;
    overflow: hidden;
    position: relative;
}

.list .item .cover image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.list .item .cover .status {
    position: absolute;
    top: 24rpx;
    right: 24rpx;
    padding: 8rpx 16rpx;
    border-radius: 32rpx;
    font-size: 24rpx;
    font-weight: 500;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
}

.list .item .cover .status.blue {
    color: var(--apple-blue);
}

.list .item .cover .status.green {
    color: var(--apple-green);
}

.list .item .cover .status.red {
    color: var(--apple-red);
}

.list .item .content {
    padding: 24rpx;
}

.list .item .title {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--apple-gray-5);
    margin-bottom: 16rpx;
    line-height: 1.4;
}

.list .item .info {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
}

.list .item .info .tag {
    font-size: 24rpx;
    color: var(--apple-gray-4);
    background: var(--apple-gray-1);
    padding: 4rpx 12rpx;
    border-radius: 6rpx;
    margin-right: 16rpx;
}

.list .item .desc {
    font-size: 28rpx;
    color: var(--apple-gray-4);
    line-height: 1.6;
    margin-bottom: 16rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.list .item .footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 16rpx;
    border-top: 1rpx solid var(--apple-gray-2);
}

.list .item .footer .left {
    display: flex;
    align-items: center;
}

.list .item .footer .avatar {
    width: 48rpx;
    height: 48rpx;
    border-radius: 24rpx;
    margin-right: 12rpx;
}

.list .item .footer .name {
    font-size: 24rpx;
    color: var(--apple-gray-4);
}

.list .item .footer .right {
    display: flex;
    align-items: center;
}

.list .item .footer .count {
    font-size: 24rpx;
    color: var(--apple-gray-4);
    margin-left: 24rpx;
}

.list .item .footer .count text {
    color: var(--apple-blue);
    font-weight: 500;
    margin-right: 4rpx;
}

.load-more {
    width: 100%;
    padding: 24rpx 0;
    text-align: center;
    font-size: 24rpx;
    color: var(--apple-gray-4);
}

.no-more {
    width: 100%;
    padding: 24rpx 0;
    text-align: center;
    font-size: 24rpx;
    color: var(--apple-gray-4);
}
