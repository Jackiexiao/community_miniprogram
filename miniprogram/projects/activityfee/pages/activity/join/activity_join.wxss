@import "/style/public/project.wxss";
@import "/projects/activityfee/style/skin.wxss";
@import "/style/apple.wxss";

page {
    background-color: var(--apple-gray-1) !important;
}

.main {
    padding: 24rpx;
}

.form-box {
    background: #ffffff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.form-group {
    margin-bottom: 24rpx;
}

.form-group:last-child {
    margin-bottom: 0;
}

.form-label {
    font-size: 28rpx;
    font-weight: 500;
    color: var(--apple-gray-5);
    margin-bottom: 12rpx;
}

.form-label.required::after {
    content: '*';
    color: var(--apple-red);
    margin-left: 4rpx;
}

.input-box {
    background: var(--apple-gray-1);
    border-radius: 12rpx;
    padding: 24rpx;
    transition: all 0.2s ease;
}

.input-box.focus {
    background: #ffffff;
    box-shadow: 0 0 0 2rpx var(--apple-blue);
}

.input-box input {
    width: 100%;
    font-size: 28rpx;
    color: var(--apple-gray-5);
}

.input-box textarea {
    width: 100%;
    height: 200rpx;
    font-size: 28rpx;
    color: var(--apple-gray-5);
    line-height: 1.6;
}

.input-placeholder {
    color: var(--apple-gray-4);
}

.radio-group {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -8rpx;
}

.radio-item {
    margin: 8rpx;
    padding: 16rpx 24rpx;
    background: var(--apple-gray-1);
    border-radius: 32rpx;
    font-size: 28rpx;
    color: var(--apple-gray-5);
    transition: all 0.2s ease;
}

.radio-item.checked {
    background: var(--apple-blue);
    color: #ffffff;
}

.checkbox-group {
    display: flex;
    flex-direction: column;
}

.checkbox-item {
    display: flex;
    align-items: center;
    padding: 16rpx 0;
}

.checkbox-item .icon {
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
    border: 2rpx solid var(--apple-gray-3);
    margin-right: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
}

.checkbox-item.checked .icon {
    background: var(--apple-blue);
    border-color: var(--apple-blue);
}

.checkbox-item .text {
    font-size: 28rpx;
    color: var(--apple-gray-5);
}

.picker-box {
    background: var(--apple-gray-1);
    border-radius: 12rpx;
    padding: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.picker-text {
    font-size: 28rpx;
    color: var(--apple-gray-5);
}

.picker-arrow {
    font-size: 32rpx;
    color: var(--apple-gray-4);
}

.hint-text {
    font-size: 24rpx;
    color: var(--apple-gray-4);
    margin-top: 8rpx;
    line-height: 1.4;
}

.error-text {
    font-size: 24rpx;
    color: var(--apple-red);
    margin-top: 8rpx;
}

.btn-submit {
    width: 100%;
    height: 88rpx;
    background: var(--apple-blue);
    color: #ffffff;
    font-size: 32rpx;
    font-weight: 500;
    border-radius: 44rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 48rpx;
    transition: all 0.2s ease;
}

.btn-submit:active {
    opacity: 0.8;
}

.btn-submit.disabled {
    background: var(--apple-gray-2);
    color: var(--apple-gray-4);
}

.form-group .line-desc {
    font-size: 28rpx;
    text-align: center;
    width: 100%;
    color: #666;
}

.submit-line {
    width: 100%;
}

.address-list {
    width: 100%;
    padding: 20rpx 30rpx;
    display: flex;
    justify-content: start;
    flex-wrap: wrap;
}

.address-list .item {
    padding: 5rpx 20rpx;
    border: 1rpx solid #ccc;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 20rpx;
    color: #666;
    margin-bottom: 15rpx;
}