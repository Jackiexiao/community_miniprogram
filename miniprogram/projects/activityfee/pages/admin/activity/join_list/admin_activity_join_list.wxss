@import "/style/public/admin.wxss";
@import "/projects/activityfee/style/skin.wxss";
@import "/style/apple.wxss";

page {
    background-color: var(--apple-gray-1) !important;
}

.main {
    padding: 24rpx;
}

.admin-form {
    background: #ffffff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.join-list {
    display: flex;
    flex-direction: column;
}

.join-card {
    background: #ffffff;
    border-radius: 16rpx;
    margin-bottom: 24rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.join-card .header {
    padding: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid var(--apple-gray-2);
}

.join-card .user-info {
    display: flex;
    align-items: center;
}

.join-card .avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    margin-right: 16rpx;
}

.join-card .user-name {
    font-size: 32rpx;
    font-weight: 600;
    color: var(--apple-gray-5);
}

.join-card .join-time {
    font-size: 24rpx;
    color: var(--apple-gray-4);
    margin-top: 4rpx;
}

.join-card .status {
    font-size: 24rpx;
    padding: 6rpx 16rpx;
    border-radius: 24rpx;
}

.join-card .status.pending {
    background: rgba(255, 149, 0, 0.1);
    color: var(--apple-orange);
}

.join-card .status.approved {
    background: rgba(52, 199, 89, 0.1);
    color: var(--apple-green);
}

.join-card .status.rejected {
    background: rgba(255, 59, 48, 0.1);
    color: var(--apple-red);
}

.join-card .content {
    padding: 24rpx;
}

.join-card .info-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 16rpx;
}

.join-card .info-item:last-child {
    margin-bottom: 0;
}

.join-card .info-label {
    font-size: 28rpx;
    color: var(--apple-gray-4);
    width: 160rpx;
}

.join-card .info-value {
    flex: 1;
    font-size: 28rpx;
    color: var(--apple-gray-5);
    line-height: 1.6;
}

.join-card .footer {
    padding: 24rpx;
    border-top: 1rpx solid var(--apple-gray-2);
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.join-card .btn {
    padding: 12rpx 24rpx;
    font-size: 28rpx;
    border-radius: 8rpx;
    margin-left: 16rpx;
    transition: all 0.2s ease;
}

.join-card .btn:active {
    opacity: 0.8;
}

.join-card .btn.approve {
    background: var(--apple-green);
    color: #ffffff;
}

.join-card .btn.reject {
    background: var(--apple-red);
    color: #ffffff;
}

.join-card .btn.detail {
    background: var(--apple-gray-2);
    color: var(--apple-gray-5);
}

.load-more {
    width: 100%;
    padding: 24rpx;
    text-align: center;
    font-size: 24rpx;
    color: var(--apple-gray-4);
}

.no-more {
    width: 100%;
    padding: 24rpx;
    text-align: center;
    font-size: 24rpx;
    color: var(--apple-gray-4);
}

.filter-bar {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.72);
    backdrop-filter: blur(10px);
    padding: 24rpx;
    margin: -24rpx -24rpx 24rpx;
    border-bottom: 1rpx solid var(--apple-gray-2);
    display: flex;
    align-items: center;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
}

.filter-item {
    padding: 12rpx 24rpx;
    font-size: 28rpx;
    color: var(--apple-gray-4);
    background: var(--apple-gray-1);
    border-radius: 24rpx;
    margin-right: 16rpx;
    white-space: nowrap;
    transition: all 0.2s ease;
}

.filter-item.active {
    background: var(--apple-blue);
    color: #ffffff;
}