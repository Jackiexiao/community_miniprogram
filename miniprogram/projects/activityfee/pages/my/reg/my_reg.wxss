.main {
	padding: 30rpx;
	padding-bottom: 100rpx;
}

.form-box {
	background: #fff;
	padding: 30rpx;
	border-radius: 20rpx;
	margin-bottom: 30rpx;
}

.form-title {
	display: block;
	font-size: 28rpx;
	color: #000;
	margin-bottom: 15rpx;
	margin-top: 35rpx;
}

.form-title:first-child {
	margin-top: 0;
}

.form-title .must {
	color: #f00;
	margin-right: 4rpx;
}

.avatar-btn {
	padding: 0;
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	background: none;
}

.avatar-btn::after {
	border: none;
}

.avatar-wrap {
	width: 180rpx;
	height: 180rpx;
	background: #f8f8f8;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 20rpx;
}

.avatar {
	width: 180rpx;
	height: 180rpx;
	border-radius: 50%;
}

.icon-cameraadd {
	font-size: 60rpx;
	color: #999;
}

.hint-desc {
	font-size: 24rpx;
	color: #999;
	margin-bottom: 10rpx;
}

input,
textarea {
	background: #f8f8f8;
	padding: 20rpx 30rpx;
	width: 100%;
	box-sizing: border-box;
	font-size: 28rpx;
	border-radius: 10rpx;
	min-height: 90rpx;
}

.picker {
	background-color: #f8f8f8;
	padding: 20rpx;
	border-radius: 10rpx;
	font-size: 28rpx;
	min-height: 44rpx;
	width: 100%;
	box-sizing: border-box;
	line-height: 50rpx;
	color: #333;
}

.picker-select {
	color: #999;
}

.btn-get-info {
	background: #f8f8f8;
	padding: 20rpx 30rpx;
	width: 100%;
	text-align: left;
	border-radius: 10rpx;
	font-size: 28rpx;
	color: #999;
	min-height: 90rpx;
	display: flex;
	align-items: center;
}

.btn-get-info::after {
	border: none;
}

.info-text {
	background: #f8f8f8;
	padding: 20rpx 30rpx;
	width: 100%;
	box-sizing: border-box;
	border-radius: 10rpx;
	font-size: 28rpx;
	min-height: 90rpx;
	display: flex;
	align-items: center;
}

.btn-submit {
	width: 100%;
	color: #fff;
	font-size: 32rpx;
	border-radius: 10rpx;
	height: 90rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border: 0;
	background: #0820a8;
}

.radio-group {
	background: #f8f8f8;
	padding: 20rpx 30rpx;
	width: 100%;
	box-sizing: border-box;
	border-radius: 10rpx;
	display: flex;
	align-items: center;
	min-height: 90rpx;
}

.radio-item {
	margin-right: 40rpx;
	font-size: 28rpx;
	color: #333;
}

.radio-item:last-child {
	margin-right: 0;
}

/* 标签组样式 */
.tags-group {
	display: flex;
	flex-wrap: wrap;
	margin: 0 -10rpx;
	padding: 10rpx 0;
}

.tag-item {
	display: flex;
	align-items: center;
	margin: 10rpx;
	padding: 16rpx 30rpx;
	background: #f8f8f8;
	border-radius: 100rpx;
	font-size: 28rpx;
	color: #333;
	transition: all 0.3s ease;
}

.tag-icon {
	width: 32rpx;
	height: 32rpx;
	margin-right: 10rpx;
}

.tag-item.active {
	background: #e6f3ff;
	color: #576b95;
}

/* 联系方式列表样式 */
.contact-list {
	margin: 20rpx 0;
}

.contact-item {
	display: flex;
	align-items: center;
	padding: 20rpx;
	background: #fff;
	margin-bottom: 20rpx;
	border-radius: 12rpx;
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.contact-icon {
	width: 48rpx;
	height: 48rpx;
	margin-right: 20rpx;
}

.contact-info {
	flex: 1;
}

.contact-category {
	font-size: 28rpx;
	color: #666;
	margin-right: 20rpx;
}

.contact-content {
	font-size: 28rpx;
	color: #333;
}

.contact-delete {
	padding: 10rpx;
	color: #999;
	font-size: 32rpx;
}

.add-contact {
	display: flex;
	align-items: center;
	padding: 20rpx;
	background: #f8f8f8;
	border-radius: 12rpx;
	margin: 20rpx 0;
}

.add-icon {
	font-size: 32rpx;
	color: #576b95;
	margin-right: 10rpx;
}

.add-text {
	font-size: 28rpx;
	color: #576b95;
}

/* 弹窗样式 */
.modal {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 999;
	opacity: 0;
	visibility: hidden;
	transition: all 0.3s ease;
}

.modal.show {
	opacity: 1;
	visibility: visible;
}

.modal-mask {
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0, 0, 0, 0.5);
}

.modal-content {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	background: #fff;
	border-radius: 24rpx 24rpx 0 0;
	transform: translateY(100%);
	transition: transform 0.3s ease;
}

.modal.show .modal-content {
	transform: translateY(0);
}

.modal-header {
	position: sticky;
	top: 0;
	background: #fff;
	padding: 30rpx;
	border-bottom: 1rpx solid #f0f0f0;
	z-index: 1;
}

.modal-title {
	font-size: 32rpx;
	font-weight: 500;
	color: #333;
}

.modal-close {
	font-size: 40rpx;
	color: #999;
	padding: 10rpx;
}

.modal-body {
	max-height: 70vh;
	overflow-y: auto;
	padding: 0 30rpx;
}

.section {
	margin-bottom: 30rpx;
}

.section-title {
	font-size: 28rpx;
	color: #666;
	padding: 20rpx 0 10rpx;
}

.modal-footer {
	display: flex;
	padding: 30rpx;
	border-top: 1rpx solid #eee;
}

.modal-footer .btn {
	flex: 1;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	border-radius: 10rpx;
	margin: 0 10rpx;
	font-size: 28rpx;
}

.btn-cancel {
	background: #f8f8f8;
	color: #333;
}

.btn-confirm {
	background: #0052d9 !important;
	color: #fff !important;
}

.btn-confirm:active {
	opacity: 0.8;
}

.icon-delete {
	color: #999;
	font-size: 32rpx;
}