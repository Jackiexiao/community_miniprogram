@import "/projects/activityfee/style/skin.wxss"; 

page {
	background: #f8f9fa;
}

.main-edit {
    padding: 30rpx;
    min-height: 100vh;
    background: #f8f8f8;
}

.form-box {
    background: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
}

.form-group {
    margin-bottom: 40rpx;
}

.form-group:last-child {
    margin-bottom: 0;
}

.form-group-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 30rpx;
    padding-left: 20rpx;
    border-left: 8rpx solid #0066ff;
}

.form-item {
    margin-bottom: 30rpx;
}

.form-item:last-child {
    margin-bottom: 0;
}

.form-item .title {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 15rpx;
}

.must {
    color: #ff0000;
    margin-right: 5rpx;
}

input {
    background: #f8f8f8;
    padding: 20rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
}

textarea {
    background: #f8f8f8;
    padding: 20rpx;
    border-radius: 10rpx;
    width: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
}

.tag-group {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
}

.tag {
    padding: 15rpx 30rpx;
    background: #f8f8f8;
    border-radius: 10rpx;
    font-size: 26rpx;
    color: #666;
    transition: all 0.3s;
}

.tag.selected {
    background: #0066ff;
    color: #fff;
}

.contact-list {
    margin-bottom: 20rpx;
}

.contact-item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #f8f8f8;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.contact-item:last-child {
    margin-bottom: 0;
}

.contact-item .icon {
    font-size: 40rpx;
    margin-right: 20rpx;
    color: #0066ff;
}

.contact-category {
    font-size: 26rpx;
    color: #666;
    margin-right: 20rpx;
}

.contact-content {
    flex: 1;
    font-size: 28rpx;
    color: #333;
}

.icon-delete {
    font-size: 36rpx;
    color: #999;
    padding: 10rpx;
}

.add-contact {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #f8f8f8;
    border-radius: 10rpx;
    color: #0066ff;
    font-size: 28rpx;
}

.icon-add {
    font-size: 36rpx;
    margin-right: 10rpx;
}

.btn-group {
    margin-top: 60rpx;
    padding: 0 30rpx;
}

.btn-submit {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    background: #0066ff;
    color: #fff;
    font-size: 32rpx;
    border-radius: 44rpx;
    text-align: center;
}

.btn-submit[disabled] {
    background: #cccccc;
}

/* 弹窗样式 */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    display: none;
}

.modal.show {
    display: block;
}

.modal-content {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    background: #fff;
    width: 600rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.modal-title {
    text-align: center;
    font-size: 32rpx;
    color: #333;
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
}

.modal-body {
    padding: 30rpx;
}

.modal-form-item {
    margin-bottom: 30rpx;
}

.modal-form-item:last-child {
    margin-bottom: 0;
}

.modal-form-item .title {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 15rpx;
}

.modal-footer {
    display: flex;
    border-top: 1rpx solid #eee;
}

.modal-footer button {
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 32rpx;
    border: none;
    border-radius: 0;
}

.btn-cancel {
    background: #f8f8f8;
    color: #666;
}

.btn-confirm {
    background: #0066ff;
    color: #fff;
}

/* 加载状态 */
.load {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
}

.loading::before {
    content: "";
    width: 40rpx;
    height: 40rpx;
    border: 4rpx solid #f3f3f3;
    border-top: 4rpx solid #0066ff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-right: 20rpx;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}