page {
	/* 苹果系统级背景色 */
	background-color: #F5F5F7;

	/* 主题色：使用苹果系统级颜色 */
	--projectColor: #000000;  /* 主要文本颜色 */
	--projectColorLight: #F5F5F7;  /* 系统背景色 */
	--projectCompareColor: #1D1D1F;  /* 次要文本颜色 */

	/* 文本颜色系统 */
	--textPrimary: #1D1D1F;  /* 主要文本 */
	--textSecondary: #86868B;  /* 次要文本 */
	--textTertiary: #6E6E73;  /* 第三级文本 */

	/* 背景色系统 */
	--bgPrimary: #FFFFFF;  /* 主背景 */
	--bgSecondary: #F5F5F7;  /* 次要背景 */
	--bgTertiary: #FAFAFA;  /* 第三级背景 */

	/* 边框和分割线 */
	--borderColor: rgba(0, 0, 0, 0.1);

	/* 状态颜色 */
	--statusSuccess: #34C759;  /* 成功状态 */
	--statusWarning: #FF9F0A;  /* 警告状态 */
	--statusError: #FF3B30;  /* 错误状态 */

	/*#### 父组件日历颜色定义*/
	--calendarPageColor: #FFFFFF;
	--calendarMainColor: #000000 !important;
	--calendarLightColor: #1D1D1F;
}

.bg-admin {
	background-color: var(--textPrimary);
}

.text-project {
	color: var(--textPrimary) !important;
}

.bg-project {
	background-color: var(--bgPrimary) !important;
}

.bg-project.light {
	color: var(--textPrimary) !important;
	background-color: var(--bgSecondary) !important;
}

.border-project {
	border-color: var(--borderColor) !important;
}

.menu-project {
	color: var(--textPrimary) !important;
}

.tabs .tab {
	font-size: 30rpx !important;
	font-weight: 500;
}

.tabs .cur {
	color: var(--textPrimary) !important;
	font-weight: 600;
}

.tabs .tab-menu.cur:after {
	background-color: var(--textPrimary) !important;
	height: 4rpx;
}

.load-project {
	color: var(--textTertiary) !important;
}

.padding-project {
	padding-left: 24rpx !important;
	padding-right: 24rpx !important;
}

.btn-project {
	line-height: 88rpx;
	height: 88rpx;
	color: #fff;
	background-color: var(--textPrimary);
	border-radius: 44rpx;
	font-weight: 500;
	transition: all 0.2s ease;
}

.btn-project:active {
	opacity: 0.8;
}

.phone-button {
	color: var(--textPrimary) !important;
}

.shadow-project {
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-project,
.main .list .item.card-project,
.down .comm-list.menu.card-project,
.article-box .article.card-project,
.text-pic-list-box .item.card-project,
.info-list-box .item.card-project,
.main-content .content.card-project,
.meet-list-box .item.card-project,
.form-box.card-project,
.bar .search-form {
	border-radius: 16rpx !important;
	background-color: var(--bgPrimary);
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.up-project {
	width: 100%;
	padding: 0;
	margin: 0;
}

.up-project image {
	padding: 0;
	width: 100%;
	margin: 0;
	border-radius: 16rpx;
}

.my-icon-project {
	color: var(--textPrimary) !important; 
	font-size: 34rpx;
}

.meet-list-box {
	padding: 20rpx 30rpx 30rpx 30rpx;
}

.title-project {
	color: var(--textPrimary) !important;
}

.bar .search-form {
	background-color: #f6f7fb;
}