page {
	/* 苹果系统级背景色 */
	background-color: #F5F5F7;

	/* iOS 系统颜色 */
	--iosBlue: #007AFF;
	--iosGreen: #34C759;
	--iosIndigo: #5856D6;
	--iosOrange: #FF9500;
	--iosPink: #FF2D55;
	--iosPurple: #AF52DE;
	--iosRed: #FF3B30;
	--iosYellow: #FFCC00;
	--iosTeal: #5AC8FA;
	--iosGray: #8E8E93;

	/* 主题色：使用苹果系统级颜色 */
	--projectColor: var(--iosBlue);
	--projectColorLight: #F5F5F7;
	--projectCompareColor: var(--iosBlue);

	/* 文本颜色系统 */
	--textPrimary: #1D1D1F;
	--textSecondary: #86868B;
	--textTertiary: #6E6E73;
	--textQuaternary: #8E8E93;

	/* 背景色系统 */
	--bgPrimary: #FFFFFF;
	--bgSecondary: #F5F5F7;
	--bgTertiary: #FAFAFA;
	--bgQuaternary: #F2F2F7;

	/* 边框和分割线 */
	--borderColor: rgba(60, 60, 67, 0.12);
	--separatorColor: rgba(60, 60, 67, 0.06);

	/* 状态颜色 */
	--statusSuccess: var(--iosGreen);
	--statusWarning: var(--iosOrange);
	--statusError: var(--iosRed);
	--statusInfo: var(--iosBlue);

	/* 投影 */
	--shadowSmall: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
	--shadowMedium: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
	--shadowLarge: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);

	/* 圆角 */
	--radiusSmall: 8rpx;
	--radiusMedium: 16rpx;
	--radiusLarge: 24rpx;
	--radiusXLarge: 32rpx;
	--radiusCircular: 999rpx;

	/* 间距 */
	--spacingXSmall: 8rpx;
	--spacingSmall: 16rpx;
	--spacingMedium: 24rpx;
	--spacingLarge: 32rpx;
	--spacingXLarge: 48rpx;
}

.bg-admin {
	background-color: var(--textPrimary);
}

.text-project {
	color: var(--textPrimary) !important;
}

.bg-project {
	background-color: var(--bgPrimary) !important;
}

.bg-project.light {
	color: var(--textPrimary) !important;
	background-color: var(--bgSecondary) !important;
}

.border-project {
	border-color: var(--borderColor) !important;
}

.menu-project {
	color: var(--textPrimary) !important;
}

.tabs .tab {
	font-size: 30rpx !important;
	font-weight: 500;
}

.tabs .cur {
	color: var(--textPrimary) !important;
	font-weight: 600;
}

.tabs .tab-menu.cur:after {
	background-color: var(--textPrimary) !important;
	height: 4rpx;
}

.load-project {
	color: var(--textTertiary) !important;
}

.padding-project {
	padding-left: 24rpx !important;
	padding-right: 24rpx !important;
}

.btn-project {
	line-height: 88rpx;
	height: 88rpx;
	color: #fff;
	background-color: var(--projectColor);
	border-radius: 44rpx;
	font-weight: 500;
	transition: all 0.2s ease;
}

.btn-project:active {
	opacity: 0.8;
}

.phone-button {
	color: var(--textPrimary) !important;
}

.shadow-project {
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.card-project,
.main .list .item.card-project,
.down .comm-list.menu.card-project,
.article-box .article.card-project,
.text-pic-list-box .item.card-project,
.info-list-box .item.card-project,
.main-content .content.card-project,
.meet-list-box .item.card-project,
.form-box.card-project,
.bar .search-form {
	border-radius: 16rpx !important;
	background-color: var(--bgPrimary);
	box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.up-project {
	width: 100%;
	padding: 0;
	margin: 0;
}

.up-project image {
	padding: 0;
	width: 100%;
	margin: 0;
	border-radius: 16rpx;
}

.my-icon-project {
	color: var(--textPrimary) !important; 
	font-size: 34rpx;
}

.meet-list-box {
	padding: 20rpx 30rpx 30rpx 30rpx;
}

.title-project {
	color: var(--textPrimary) !important;
}

.bar .search-form {
	background-color: #f6f7fb;
}